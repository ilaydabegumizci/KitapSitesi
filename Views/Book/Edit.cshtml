@model KitapSitesi.Models.Book

@{
    ViewData["Title"] = "Edit";
}

<br />


<h1 style="text-align:center">Kitap Bilgilerini Güncelle</h1>
<div style="       padding: 30px;
        padding-top: 10px;
">

    <form asp-action="Edit" class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">

            <label asp-for="Name" class="col-sm-2 col-form-label"> Kitap Adı:</label>
            <div class="col-sm-10" style="position:relative; left:-100px;">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Author" class="col-sm-2 col-form-label"> Yazar Adı:</label>
            <div class="col-sm-10" style="position:relative; left:-100px;">
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group row">
            <label asp-for="CategoryId" class="col-sm-2 col-form-label"> Kategori:</label>
            <div class="col-sm-10" style="position:relative; left:-100px;">
                <select asp-for="CategoryId" class="form-control" asp-items="@(IEnumerable<SelectListItem>)ViewBag.Items"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Description" class="col-sm-2 col-form-label"> Açıklama:</label>
            <div class="col-sm-10" style="position:relative; left:-100px;">
                <textarea asp-for="Description" class="form-control"
                          rows="3"
                          required></textarea>

                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Price" class="col-sm-2 col-form-label">Fiyat:</label>
            <div class="col-sm-10" style="position:relative; left:-100px;">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Discount" class="col-sm-2 col-form-label">İndirim Tutarı:</label>
            <div class="col-sm-10" style="position:relative; left:-100px;">
                <input asp-for="Discount" class="form-control" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="ImageUrl" class="col-sm-2 col-form-label">Kapak Resmi Linki:</label>
            <div class="col-sm-10" style="position:relative; left:-100px;">
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>


<div>
    <a asp-action="Index">Geri Dön</a>
</div>

