@model IEnumerable<KitapSitesi.Models.Book>

@{
    ViewData["Title"] = "Index";
}
<style>
    img {
        float: left;
        width: 140px;
        height: 204px;
        object-fit: cover;
    }
</style>

<br />
<h1 class="text-center">Kitap Listesi</h1>

<p align="center">
    <button type="button" class="btn btn-info" style="padding:10px;">

        <a asp-action="AddBook">Yeni Kitap Ekle</a>
    </button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Kitap Adı
            </th>
            <th>
                Yazar Adı
            </th>
            <th>
                Kategori
            </th>
            <th>
                Fiyat
            </th>
            <th>
                İndirim Tutarı
            </th>
            <th>
                Kapak Resmi
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Discount)
                </td>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" alt="Image" />
                </td>
                <td>
                    @Html.ActionLink("Güncelle", "Edit",  new { id=item.Id }) |
                    @Html.ActionLink("Detaylar", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Sil", "Delete",  new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
